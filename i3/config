# Resize Window

mode "resize" {
    bindsym h resize shrink width  10 px or 10 ppt
    bindsym j resize grow   height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow   width  10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


## Command Shortcuts ##

bindsym $mod+Return       exec $term
bindsym $mod+Shift+w      exec $term -fg 'black' -bg 'white' -fn '-*-terminus-bold-r-normal-*-16-*-*-*-*-*-iso10646-*' -name white
bindsym $mod+Shift+Return exec $term -name notes
bindsym $mod+Shift+p      exec $term -fg 'grey' -bg 'black' -name music -e ncmpcpp

bindsym $mod+p          exec dmenu_run
bindsym $mod+b          exec firefox
bindsym $mod+i          exec thunderbird
bindsym $mod+f          exec pcmanfm
bindsym XF86ScreenSaver exec slock

bindsym XF86AudioPlay        exec mpc toggle
bindsym XF86AudioStop        exec mpc stop
bindsym XF86AudioPrev        exec mpc prev
bindsym XF86AudioNext        exec mpc next
bindsym XF86AudioMute        exec amixer set Master toggle
bindsym XF86AudioLowerVolume exec amixer set Master 5%- unmute
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ unmute


## i3status Settings ##

bar {
    position top
    status_command i3status -c ~/.i3/status.conf
}


## i3-Specific Autostart ##

exec [ -z "$(pidof dunst)" ] && dunst
exec [ -z "$(pidof mpd)" ] && mpd
exec [ -z "$(pidof xfce4-power-manager)" ] && xfce4-power-manager
exec [ -z "$(pidof nm-applet)" ] && nm-applet

exec sh ~/.fehbg
